<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:labelFor="@id/edit"
			android:text="Label"
			tools:ignore="AutoFill,HardcodedText"
			>
		<!-- lint:AutoFill irrelevant for this violation -->
		<!-- lint:HardcodedText irrelevant for this violation -->
	</TextView>

	<EditText
			android:id="@+id/edit"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:hint="enter something"
			android:inputType="none"
			tools:ignore="AutoFill,HardcodedText,UnusedIds"
			>
		<!-- lint:AutoFill irrelevant for this violation -->
		<!-- lint:HardcodedText irrelevant for this violation -->
		<!-- lint:UnusedIds REPORT it's actually used -->
	</EditText>

</LinearLayout>
