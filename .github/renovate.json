{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"local>TWiStErRob/renovate-config"
	],
	"packageRules": [
		{
			"description": "Disable updating the core tooling because it's not automatable.",
			"matchPackagePrefixes": [
				"com.android.tools.build:",
				"com.android.tools.lint:",
				"org.jetbrains.kotlin:",
				"org.jetbrains.kotlin.",
				"com.android."
			],
			"matchDepNames": [
				"gradle"
			],
			"enabled": false
		},
		{
			"description": "Enable updating patch versions in browser.",
			"matchPackagePrefixes": [
				"com.android.tools.lint:"
			],
			"matchFileNames": [
				"docs/browser/agp-??x/build.gradle"
			],
			"matchUpdateTypes": [ "patch" ],
			"enabled": true
		},
		{
			"description": "Keep older version because it's not compatible with Kotlin metadata of current AGP 7.1.3.",
			"matchPackageNames": [ "androidx.annotation:annotation" ],
			"allowedVersions": "<1.5.0"
		},
		{
			"description": "Keep older version because it's not compatible with Kotlin metadata of current AGP 7.1.3.",
			"matchPackageNames": [ "androidx.appcompat:appcompat" ],
			"allowedVersions": "<1.5.0"
		},
		{
			"description": "Keep older version because it's not compatible with Kotlin metadata of current AGP 7.1.3.",
			"matchPackageNames": [ "androidx.recyclerview:recyclerview" ],
			"allowedVersions": "<1.3.0"
		}
	]
}
